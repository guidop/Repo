TEST(CNGConfigFunctionTest, TestPerformance) 
{
	CTimer timer;
	ostringstream pippo;
	
	int iteration = 100000;

	timer.Start();
	for(int i=0; i< iteration; i++)
	{
		double val1 = i*2.3;
		double val2 = i*4.7;
		double val3 = i*5.378;
		pippo << val1 << "|" << val2 << "|" << val3 << endl;
	}
	timer.Stop();

	char buffer1[100];
	char buffer2[100];
	char buffer3[100];
	timer.Start();
	for(int i=0; i< iteration; i++)
	{
		double val1 = i*2.3;
		double val2 = i*4.7;
		double val3 = i*5.378;
		sprintf_s(buffer1,"%g",val1);
		sprintf_s(buffer2,"%g",val2);
		sprintf_s(buffer3,"%g",val3);
	}
	timer.Stop();

	
}

